<LinearLayout android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/bname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="50dp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="2sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:background="#343434"
        android:gravity="center"
        android:padding="4dp"
        android:text="형남공학관 회의실"
        android:textAlignment="center"
        android:textColor="#FFFFFF"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#AAAAAA"
        >

        <TextView
            android:id="@+id/building_name"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/black"
            android:background="@color/blue"
            android:layout_weight="1"
            android:layout_width="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="범위 내의 회의실"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/blue"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#AAAAAA"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="10dp"
            android:background="@color/situm_red"
            android:layout_weight="1"
            android:layout_width="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="범위 밖의 회의실"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/situm_red"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:height="50dp"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeMinTextSize="2sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:background="#3F51B5"
            android:gravity="center"
            android:padding="4dp"
            android:text="522호 회의실"
            android:textAlignment="center"
            android:textColor="#FFFFFF">
        </TextView>
        <Button
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/button1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="#017488"
            android:textColor="@color/white_greyish"
            android:text="문 열기"
            android:elevation="5dp"
            >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:height="50dp"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeMinTextSize="2sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:background="#3F51B5"
            android:gravity="center"
            android:padding="4dp"
            android:text="424호 회의실"
            android:textAlignment="center"
            android:textColor="#FFFFFF">

        </TextView>
        <Button
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/button2"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="#017488"
            android:textColor="@color/white_greyish"
            android:text="문 열기"
            android:elevation="5dp"
            >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:height="50dp"
            android:autoSizeMaxTextSize="30sp"
            android:autoSizeMinTextSize="2sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:background="#3F51B5"
            android:gravity="center"
            android:padding="4dp"
            android:text="525호 회의실"
            android:textAlignment="center"
            android:textColor="#FFFFFF">

        </TextView>
        <Button
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/button3"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="#017488"
            android:textColor="@color/white_greyish"
            android:text="문 열기"
            android:elevation="5dp"
            >
        </Button>
    </LinearLayout>

</LinearLayout>


